<div class="containter text-center">
  <h1>New Game</h1>
  <br>
  <h3>Voici vos lettres :</h3>
</div>

<div class="letters-container">
  <% @letters.each do |letter| %>
    <span class="letter"><%= letter %></span>
  <% end %>
</div>
<div class="container d-flex align-item-center flex-column">
<form action="/score" method="POST" data-turbo="false">
  <label for="answer">Votre mot :</label>
  <input type="text" name="answer">

  <!-- Ajouter un champ cachÃ© pour envoyer la grille de lettres -->
  <%= hidden_field_tag :letters, @letters.join(' ') %>

  <input type="submit" value="Envoyer">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

<%= link_to "Clique ici pour changer les lettres ?", new_path, class: "btn btn-primary text-warning"%>
</div>
